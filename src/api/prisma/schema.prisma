datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  lastName  String
  telefone  String
  addressId String?  @unique  // A chave estrangeira para o Address
  address   Address? @relation(fields: [addressId], references: [id]) // Relacionamento com Address
}

model Address {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  bairro     String
  complemento String
  rua        String
  cep        String
  cidade     String
  uf         String
  numero     Int
  user       User?    @relation
}
